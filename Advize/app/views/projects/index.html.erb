<h1>All Projects</h1>

<% @projects.each do |project| %>
<h3><%= project.title.upcase %></h3>
<p><%= project.description.capitalize %></p>
<p><%= project.budget %>$, <%= project.work_force %> people</p>
<%= link_to 'Show', project_path(project) %>
<%= link_to 'Edit', edit_project_path(project) %>
<%= link_to 'Delete', project_path(project), method: :delete, data: {confirm: "Are You Sure?"} %>
<br>

<% end %>

<%= link_to 'New Project', new_project_path %>