<div class="col-md-6 col-md-offset-3">
<%= form_for @user, method: :put, :html => {:multipart => true} do |f| %>
	<div class="form-group">
		<%= f.text_field :username, class: 'form-control', placeholder: 'Username' %>
	</div>

	<div class="form-group">
		<%= f.file_field :image %>
	</div>


	<div class="form-group">
		<%= f.submit 'Submit' %>
	</div>
<% end %>
</div>